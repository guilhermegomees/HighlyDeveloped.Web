@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using ClientDependency.Core.Mvc
@{
	Layout = null;
	
	var homePage = Model.AncestorOrSelf<Home>();
}
<html>
<head>
    @{
        Html.RequiresCss("https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css",
            new
            {
                integrity = "sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC",
                crossorigin = "anonymous"
            }
        );
        Html.RequiresCss("https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css");
        Html.RequiresCss("/css/CookieConsent.css");
        
        Html.RequiresJs("https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js",
            new
            {
                integrity = "sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM",
                crossorigin = "anonymous"
            }
        );
        Html.RequiresJs("/scripts/CookieConsent.js");
    }
    
    
    @Html.RenderCssHere()
</head>    
<body>
    
    <!-- NavBar -->
    @Html.Partial("NavBar")

    @RenderBody()
    
    <!-- Footer -->
    @Html.Partial("Footer")
    
    <!-- Cookie Consent -->
    <div class="alert alert-dismissible text-center cookiealert" role="alert">
      <div class="cookiealert-container">
        <b>Você gosta de biscoitos?</b> &#x1F36A; Usamos cookies para garantir que você tenha a melhor experiência em nosso site. <a href="http://cookiesandyou.com/" target="_blank">Saber mais</a>
        <button type="button" class="btn btn-primary btn-sm acceptcookies" aria-label="Close">Concordo</button>
      </div>
    </div>
    
    @Html.RenderJsHere()
</body>
</html>